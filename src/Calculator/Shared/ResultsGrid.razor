

    <div class="card border-0">
        <img src="img/background.png" class="card-img" alt="...">
        <div class="card-img-overlay">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text">Last updated 3 mins ago</p>

            <h5 class="card-subtitle my-2 text-muted">Calculated intermediate results</h5>

            <div class="d-flex justify-content-start">

                @foreach (var number in Numbers)
                {
                    <CalculatedNumber Number="number" OnNumberClicked="() => OnNumberClicked.InvokeAsync(number)"></CalculatedNumber>
                }

            </div>
        </div>


    </div>

@code {
    [Parameter]
    public List<Calculator.CalculatedNumber> Numbers { get; set; }


    [Parameter]
    public EventCallback<Calculator.CalculatedNumber> OnNumberClicked { get; set; }

}
